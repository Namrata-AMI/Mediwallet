<%- layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <h1 class="col-6 offset-3"> Add funds to Wallet</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/app/add-funds/<%=patientId%>" class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="amount" class="form-label">Amount to add: </label>
            <input type="number" name="amount" placeholder="Enter amount" class="form-control" required>
            <div class="invalid-feedback">Looks enough!</div>
        </div>
            <a href="/app/add-funds/<%= patientId %>"><button class="btn btn-success mb-5"> ADD </button></a>
        </form>
    </div>
</div>