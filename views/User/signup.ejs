<%- layout("/layouts/boilerplate") %>


<div class="row mt-3">
    <h1 class="col-6 offset-3"> Sign-Up on MediWallet</h1>
    <div class="col-6 offset-3">
        <form method="post" action="/app/signup" class="needs-validation" novalidate>

        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" placeholder="Enter username" class="form-control" required>
            <div class="invalid-feedback">Looks Good!</div>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" placeholder="Enter email"  id ="email" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="walletbalance" class="form-label">Wallet</label>
            <input type="text" name="walletbalance" placeholder="Enter Min Wallet Balance (e.g.,&#8377;300)" id="wallet" class="form-control" required>
            <div class="invalid-feedback">Please provide a valid wallet balance.</div>
        </div>


        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" placeholder="Enter password"  id ="password" class="form-control" required>
        </div>

        <button class="btn btn-success mb-5"> Sign-Up</button>
    </form>
    </div>
</div>